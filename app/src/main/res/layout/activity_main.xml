<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/img_sun"
        android:layout_marginTop="3dp"
        android:layout_marginStart="30dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/shape"/>

    <TextView
        android:id="@+id/lbl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/img_sun"
        android:fontFamily="@font/rubik_light"
        android:textStyle="bold"
        android:text="@string/tues_20_otc"
        android:textColor="#D43A2D"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:text="@string/name"
        android:layout_height="wrap_content"
        android:textColor="#1A1613"
        android:lineHeight="30dp"
        android:fontFamily="@font/gilroy_extra_bold"
        android:textSize="32sp"
        android:layout_marginTop="9dp"
        android:layout_below="@id/lbl_date"
        android:layout_marginStart="30dp"/>

    <RelativeLayout
        android:id="@+id/layout_health"
        android:layout_below="@id/lbl_name"
        android:layout_width="319dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_ground_shape"
        >
        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="68dp"
            android:layout_height="74dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="21dp"
            android:src="@drawable/image_avata"/>

        <TextView
            android:id="@+id/lbl_healthScore"
            android:layout_toEndOf="@id/img_avatar"
            android:layout_marginStart="23dp"
            android:text="@string/health_score"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/gilroy_extra_bold"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:textFontWeight="700"
            android:lineHeight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lbl_weight"
            android:layout_below="@id/lbl_healthScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_avatar"
            android:text="@string/weight_42_kg"
            android:layout_marginStart="23dp"
            android:textSize="14sp"
            android:lineHeight="24dp"
            android:fontFamily="@font/gilroy_light"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/lbl_height"
            android:layout_below="@id/lbl_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_avatar"
            android:text="@string/height_1_65_m"
            android:layout_marginStart="23dp"
            android:textSize="14sp"
            android:lineHeight="24dp"
            android:textFontWeight="400"
            android:fontFamily="@font/gilroy_light"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/lbl_age"
            android:layout_below="@id/lbl_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_avatar"
            android:text="@string/age_23"
            android:layout_marginStart="23dp"
            android:textSize="14sp"
            android:lineHeight="24dp"
            android:fontFamily="@font/gilroy_light"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/lbl_body_status"
            android:layout_below="@id/lbl_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_avatar"
            android:text="@string/body_status_thin"
            android:layout_marginStart="23dp"
            android:textSize="14sp"
            android:lineHeight="24dp"
            android:fontFamily="@font/gilroy_light"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/lbl_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="7dp"
            android:text="@string/more"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/rubik_light"
            android:textStyle="bold"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/lbl_metrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_health"
        android:layout_marginStart="30dp"
        android:text="@string/metrics"
        android:fontFamily="@font/gilroy_extra_bold"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:lineHeight="30dp"
        android:textFontWeight="700"
        android:textColor="#1A1613"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/lbl_metrics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recyclerview_matrics"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"

            />

        <RelativeLayout
            android:id="@+id/bottom_navigation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="#B4ECF3">

            <ImageView
                android:id="@+id/img_heart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/health"
                />
            <ImageView
                android:id="@+id/img_shopping"
                android:layout_centerVertical="true"
                android:src="@drawable/shopping"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/img_heart"
                android:layout_marginEnd="50dp"/>

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:layout_centerVertical="true"
                android:layout_marginStart="35dp"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toEndOf="@id/img_heart"
                android:layout_marginStart="50dp"
                android:src="@drawable/gamming"/>

            <ImageView
                android:id="@+id/img_chat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/message"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="35dp"/>


        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>








</RelativeLayout>